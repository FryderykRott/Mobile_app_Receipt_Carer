<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.fryderyk.receiptcarer.viewmodels.ReceiptAdderViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="@dimen/text_margin"-->
            <!--android:text="@string/large_text" />-->

            <!--Data zakupu-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <EditText
                    android:id="@+id/dataZakupyEditText"
                    android:layout_width="330dp"
                    android:afterTextChanged="@{(editable)->viewModel.afterDataZakupuTextChanged(editable)}"
                    android:layout_height="wrap_content"
                    android:hint="Data zakupu"
                    android:onClick="@{()->viewModel.onDataPicker()}"
                    android:textColorHint="@color/colorAccentLightGrey"
                    android:backgroundTint="@color/colorAccent"
                    bind:calendarDialog="@{viewModel.test}"
                    />


                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:onClick="@{()->viewModel.onDataPicker()}"
                    android:background="?android:selectableItemBackground"
                    android:src="@drawable/ic_date_range_black_24dp"
                    bind:toastMessage="@{viewModel.toastMessage}"/>

            </LinearLayout>

            <!--Paragon nazwa-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nazwa paragonu"
                    android:layout_gravity="start"
                    android:layout_marginEnd="5dp"/>

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Paragon nazwa"
                    android:textColorHint="@color/colorAccentLightGrey"
                    android:backgroundTint="@color/colorAccent"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:layout_gravity="end"
                        android:textColor="@color/colorAccentLightGrey"
                        android:layout_marginEnd="5dp"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/ 50"
                        android:textColor="@color/colorAccentLightGrey"
                        android:layout_gravity="end"
                        android:layout_marginEnd="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <!--Cena-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cena"
                    android:layout_gravity="start"
                    android:layout_marginEnd="5dp"/>

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0.00 zł"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/colorAccentLightGrey"
                    android:backgroundTint="@color/colorAccent"
                    />


            </LinearLayout>

            <!--Kategoria-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategoria"
                    android:layout_gravity="start"
                    android:layout_marginEnd="5dp"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/colorAccent"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/colorAccentLightGrey" />



            </LinearLayout>

            <!--Nazwa Sklepu-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nazwa sklepu"
                    android:layout_gravity="start"
                    android:layout_marginEnd="5dp"/>

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sklep"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/colorAccentLightGrey"
                    android:backgroundTint="@color/colorAccent"
                    />


            </LinearLayout>

            <!--Opis-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opis"
                    android:layout_gravity="start"
                    android:layout_marginEnd="5dp"/>

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:ems="10"
                    android:backgroundTint="@color/colorAccent"
                    android:gravity="start"
                    android:inputType="textMultiLine" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:layout_gravity="end"
                        android:textColor="@color/colorAccentLightGrey"
                        android:layout_marginEnd="5dp"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/ 500"
                        android:textColor="@color/colorAccentLightGrey"
                        android:layout_gravity="end"
                        android:layout_marginEnd="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="?android:attr/listDivider" />

            <!--Znaczniki-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Znaczniki"
                    android:layout_gravity="start"
                    android:layout_marginEnd="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textColorHint="@color/colorAccentLightGrey"
                        android:hint="Wpisz tag"
                        android:backgroundTint="@color/colorAccent"
                        android:gravity="start"
                        android:inputType="textMultiLine" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_add_black_24dp"
                        android:background="?android:selectableItemBackground"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="x"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_gravity="end"

                        android:textColor="@color/colorAccentLightGrey"
                        android:layout_marginEnd="5dp"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="/ 10"
                        android:gravity="center"
                        android:textColor="@color/colorAccentLightGrey"
                        android:layout_gravity="end"
                        android:textSize="16sp"
                        android:layout_marginEnd="5dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <!--Produkty-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Produkty"
                    android:layout_gravity="start"
                    android:layout_marginEnd="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatSpinner
                        android:layout_width="280dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/colorAccent"
                        android:inputType="numberDecimal"
                        android:textColorHint="@color/colorAccentLightGrey" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_add_black_24dp"
                        android:background="?android:selectableItemBackground"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="x"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_gravity="end"

                        android:textColor="@color/colorAccentLightGrey"
                        android:layout_marginEnd="5dp"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="/ 10"
                        android:gravity="center"
                        android:textColor="@color/colorAccentLightGrey"
                        android:layout_gravity="end"
                        android:textSize="16sp"
                        android:layout_marginEnd="5dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <!--Gwarancja-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gwarancja"
                    android:layout_gravity="start"
                    android:layout_marginEnd="5dp"/>

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/colorAccentLightGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="5dp"
                    android:text="+ Zdjęcia" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="top"
                    android:gravity="top">

                    <LinearLayout
                        android:id="@+id/contener_zdjecia"
                        android:layout_width="250dp"
                        android:layout_height="500dp"
                        android:orientation="vertical">


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <android.support.v7.widget.AppCompatImageButton
                            android:background="?android:selectableItemBackground"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="0dp"
                            android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                            android:src="@drawable/ic_camera_red_50dp" />

                        <TextView
                            android:id="@+id/Text_ad_skanuj_error_support"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="Aparat"
                            android:textColor="@color/colorAccentGreen"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <android.support.v7.widget.AppCompatImageButton
                            android:background="?android:selectableItemBackground"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="0dp"
                            android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                            android:src="@drawable/ic_image_red_50dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="Galeria"
                            android:textColor="@color/colorAccentGreen"
                            android:textSize="16sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <!--Zdjęcia-->

        </LinearLayout>

    </ScrollView>
</layout>