<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <!--app:cardCornerRadius="15dp"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_escape_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/ic_clear_white_24dp"
                android:src="@drawable/ic_clear_white_24dp"
                tools:src="@drawable/ic_clear_white_24dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_announcement_black_24dp" />

                    <TextView
                        android:id="@+id/Text_ad_skanuj_error_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="Jesteś pewien?"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="1dp"
                    android:background="@color/colorAccentWhite">

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/text_inf_support_up"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Text_ad_skanuj_error_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/text_inform_support_down"
                    android:textColor="@color/colorAccentWhite"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="1dp"
                    android:background="@color/colorAccentWhite">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/checkButtonInformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="40dp"
                        android:buttonTint="@color/colorAccentWhite"
                        android:checked="true"
                        android:fontFamily="@font/roboto"
                        android:text="NIE POKAZUJ WIĘCEJ"
                        android:textColor="@color/colorAccentWhite"
                        android:textSize="12sp"
                        android:typeface="normal" />

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:fontFamily="@font/roboto"-->
                        <!--android:text="Dalej"-->
                        <!--android:textColor="@color/colorAccentGreen"-->
                        <!--android:textSize="12sp"-->
                        <!--android:textStyle="bold" />-->

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/button_next_alert_dialog_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:fontFamily="@font/roboto"
                        android:foregroundGravity="center"
                        android:text="DALEJ"
                        android:textColor="@color/colorAccentWhite"
                        android:textSize="12sp"
                        android:typeface="normal" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>